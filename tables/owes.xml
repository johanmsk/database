<?xml version="1.1" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog" xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.5.xsd">
    <changeSet author="thordy" id="1">
        <createTable tableName="owes">
            <column name="player_ower_id" type="INT UNSIGNED">
                <constraints nullable="false"/>
            </column>
            <column name="player_owee_id" type="INT UNSIGNED">
                <constraints nullable="false"/>
            </column>
            <column name="owe_type_id" type="INT UNSIGNED">
                <constraints nullable="false"/>
            </column>
            <column name="amount" type="INT">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addUniqueConstraint
            columnNames="player_ower_id, player_owee_id, owe_type_id"
            constraintName="UNQ_owes_player_ower_id_player_owee_id_owe_type_id"
            tableName="owes"/>

        <createIndex indexName="IDX_owes_owe_type_id" tableName="owes">
            <column name="owe_type_id"/>
        </createIndex>

        <createIndex indexName="IDX_owes_player_owee_id" tableName="owes">
            <column name="player_owee_id"/>
        </createIndex>

        <addForeignKeyConstraint
            baseColumnNames="owe_type_id"
            baseTableName="owes"
            constraintName="FK_owes_owe_type_id"
            onDelete="NO ACTION"
            onUpdate="NO ACTION"
            referencedColumnNames="id"
            referencedTableName="owe_type"/>

        <addForeignKeyConstraint
            baseColumnNames="player_owee_id"
            baseTableName="owes"
            constraintName="FK_owes_player_owee_id"
            onDelete="NO ACTION"
            onUpdate="NO ACTION"
            referencedColumnNames="id"
            referencedTableName="player"/>

        <addForeignKeyConstraint
            baseColumnNames="player_ower_id"
            baseTableName="owes"
            constraintName="FK_owes_player_ower_id"
            onDelete="NO ACTION"
            onUpdate="NO ACTION"
            referencedColumnNames="id"
            referencedTableName="player"/>
    </changeSet>
</databaseChangeLog>