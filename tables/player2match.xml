<?xml version="1.1" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog" xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.5.xsd">
    <changeSet author="thordy" id="1">
        <createTable tableName="player2match">
            <column autoIncrement="true" name="id" type="INT UNSIGNED">
                <constraints primaryKey="true"/>
            </column>
            <column name="match_id" type="INT UNSIGNED">
                <constraints nullable="false"/>
            </column>
            <column name="player_id" type="INT UNSIGNED">
                <constraints nullable="false"/>
            </column>
            <column name="order" type="INT">
                <constraints nullable="false"/>
            </column>
            <column name="game_id" type="INT UNSIGNED" defaultValueNumeric="0">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <createIndex indexName="IDX_player2match_game_id" tableName="player2match">
            <column name="game_id"/>
        </createIndex>

        <createIndex indexName="IDX_player2match_match_id" tableName="player2match">
            <column name="match_id"/>
        </createIndex>

        <createIndex indexName="IDX_player2match_player_id" tableName="player2match">
            <column name="player_id"/>
        </createIndex>

        <addForeignKeyConstraint
            baseColumnNames="game_id"
            baseTableName="player2match"
            constraintName="FK_player2match_game_id"
            onDelete="NO ACTION"
            onUpdate="NO ACTION"
            referencedColumnNames="id"
            referencedTableName="game"/>

        <addForeignKeyConstraint
            baseColumnNames="match_id"
            baseTableName="player2match"
            constraintName="FK_player2match_match_id"
            onDelete="CASCADE"
            onUpdate="NO ACTION"
            referencedColumnNames="id"
            referencedTableName="match"/>

        <addForeignKeyConstraint
            baseColumnNames="player_id"
            baseTableName="player2match"
            constraintName="FK_player2match_player_id"
            onDelete="NO ACTION"
            onUpdate="NO ACTION"
            referencedColumnNames="id"
            referencedTableName="player"/>
    </changeSet>
</databaseChangeLog>